generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(uuid())
  firstName     String
  lastName      String
  sub           String      @unique
  profileImgUrl String
  bookshelves   Bookshelf[]
}

model Book {
  id                  String  @id @default(uuid())
  isbn                String  @unique
  title               String
  author              String
  year_of_publication Int
  publisher           String
  image_url_s         String?
  image_url_m         String?
  image_url_l         String?
}

model Bookshelf {
  id          String     @id @default(uuid())
  name        String
  description String?
  visible     Visibility @default(PRIVATE)
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  userId      String
  createdBy   User       @relation(fields: [userId], references: [id])
}

enum Visibility {
  PUBLIC
  PRIVATE
}
