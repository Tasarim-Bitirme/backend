generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [uuidOssp(map: "uuid-ossp")]
}

model User {
  id            String      @id @default(uuid())
  firstName     String
  lastName      String
  sub           String      @unique
  profileImgUrl String
  bookshelves   Bookshelf[]
}

model Book {
  id                  String          @id @default(dbgenerated("public.uuid_generate_v4()"))
  isbn                String          @unique
  title               String
  author              String
  year_of_publication Int
  publisher           String
  image_url_s         String?
  image_url_m         String?
  image_url_l         String?
  description         String?
  genres              String[]
  Bookshelves         BookshelfBook[]
}

model Bookshelf {
  id          String          @id @default(uuid())
  name        String
  description String?
  visible     Visibility      @default(PRIVATE)
  createdAt   DateTime        @default(now()) @map("created_at")
  updatedAt   DateTime        @updatedAt @map("updated_at")
  userId      String
  owner       User            @relation(fields: [userId], references: [id])
  books       BookshelfBook[]
}

enum Visibility {
  PUBLIC
  PRIVATE
}

model BookshelfBook {
  bookshelfId String
  bookId      String
  bookshelf   Bookshelf @relation(fields: [bookshelfId], references: [id])
  book        Book      @relation(fields: [bookId], references: [id])
  assignedAt  DateTime  @default(now())

  @@id([bookshelfId, bookId])
}
