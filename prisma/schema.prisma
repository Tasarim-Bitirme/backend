// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cat {
  id    Int    @id @default(autoincrement())
  name  String
  age   Int
  breed String
}

model User {
  id            String @id @default(uuid())
  firstName     String
  lastName      String
  email         String @unique
  profileImgUrl String
}

model Book {
  id                  String  @id @default(uuid())
  isbn                String  @unique
  title               String
  author              String
  year_of_publication Int
  publisher           String
  image_url_s         String?
  image_url_m         String?
  image_url_l         String?
}
